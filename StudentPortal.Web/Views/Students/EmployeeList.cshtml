@{
}
@model List<StudentPortal.Web.Models.Entities.Employee>
<h1>Employee List</h1>
<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Email</th>
            <th>Phone</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var employee in Model)
        {
            <tr>
                <td>@employee.Id</td>
                <td>@employee.Name</td>
                <td>@employee.Email</td>
                <td>@employee.Phone</td>
                <td>
                    <a class="btn btn-primary" asp-controller="Students" asp-action="EmployeeEdit" asp-route-id="@employee.Id">Edit</a>
                    <a class="btn btn-danger" asp-controller="Students" asp-action="EmployeeDelete" asp-route-id="@employee.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>